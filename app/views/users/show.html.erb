<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
		<h1>
			<%= gravatar_for @user %>
			<%= @user.name %>
		</h1> 

		<h2>
			<div>Certification type: <%= "Foundation Level" if @user.certificate_type == "CTFL" %></div>
			<div><%= "You can edit test library" if @user.is_superuser%></div>
		</h2>
    </section>
  </aside>
</div>
